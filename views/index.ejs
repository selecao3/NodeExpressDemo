<!DOCTYPE html>

<%- include('./parts/htmlSetting') %>

<body>
    <%- include('./parts/header') %>
    <!--folderNameからContentBoxに変更しておく-->
    <div id="main-edit">
        <div class="folderName">
            <span id="title">ユーザー対応記録</span>
            <form action="/postData" method="post">
                <table>
                    <tbody>
                        <tr>
                            <td class="td-left">
                                <b>対応日時：</b>
                            </td>
                            <td class="td-right">
                                <input name="date" type="text" class="date-input" value="<%= defaultYear %>年<%= defaultMonth %>月<%= defaultDay %>日 <%= defaultHour %>時<%= defaultMin %>分">

                            </td>
                        </tr>
                    </tbody>
                </table>
                <hr>
                <div style="display:flex;">
                    <table>
                        <tbody>
                            <tr>
                                <td class="td-left">
                                    <b>担当者：</b>
                                </td>
                                <td class="td-right">
                                    <select name="stuff" class="require">
                                        <option value="">未選択</option>
                                        <option value="高橋">高橋</option>
                                        <option value="石田">石田</option>
                                    </select>
                                    <span class="error-info" hidden>担当者を選択してください</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <hr>
                <b>質問者について</b>
                <table>
                    <tbody>
                        <tr>
                            <td class="td-left">
                                <b>身分：</b>
                            </td>
                            <td class="td-right">
                                <select name="ident" class="require">
                                    <option value="">未選択</option>
                                    <option value="学生">学生</option>
                                    <option value="教職員">教職員</option>
                                </select>
                                <span class="error-info" hidden>質問者の身分を選択してください</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>氏名：</b>
                            </td>
                            <td>
                                <input type="text" name="questioner" class="require">
                                <span class="error-info" hidden>質問者の指名を記入してください</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>学生（教職員）番号：</b>
                            </td>
                            <td>
                                <input type="text" name="questionersNumber">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>連絡先：</b>
                            </td>
                            <td>
                                <input type="text" name="questionersAddress">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>基盤ID：</b>
                            </td>
                            <td>
                                <input type="text" name="questionersID" class="require">
                                <span class="error-info" hidden>質問者の基盤IDを記入してください</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <hr>
                <div style="display:flex;">
                    <table>
                        <tbody>
                            <tr>
                                <td class="td-left">
                                    <b>対応種別：</b>
                                </td>
                                <td class="td-right">
                                    <% const ary = [
                                        'パスワードリクエスト',
                                        'ICカード不具合',
                                        '履修登録関連',
                                        '学内ライセンスソフトウェア',
                                        '端末設定対応',
                                        '証明書リクエスト',
                                        '教育用端末関連',
                                        'その他',
                                    ]; %>
                                    <select name="questions" class="require">
                                        <option value="">未選択</option>
                                        <% ary.forEach(function (v,k) { %>
                                        <option value="<%= v %>">
                                            <%= v %>
                                        </option>
                                        <% }); %>
                                    </select>
                                    <span class="error-info" hidden>対応種別を選択してください</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>内容：</b>
                                </td>
                                <td>
                                    <!-- textareaへ -->
                                    <!-- 必須事項と制限 -->
                                    <input type="text" name="questionsCon" class="require">
                                    <span class="error-info" hidden>質問内容を記入してください</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <hr>
                <table>
                    <tbody>
                        <tr>
                            <td class="td-left">
                                <b>特記事項：</b>
                            </td>
                            <td class="td-right">
                                <textarea name="specialText" id="text" cols="20" rows="10"></textarea>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <hr>
                <div style="margin:auto;width:200px;">
                    <span id="checkFinFalseArea">
                        <input type="hidden" id="checkFinFalse" name="checkFin" value="0">
                    </span>
                    <input id="checkFin" type="checkbox" name="checkFin" value="1">
                    <label for="checkbox">完了済みならチェック</label>
                    <p class="formButton">
                        <input type="submit" value="内容を送信する">
                    </p>

                </div>
            </form>


        </div>

    </div>


</body>

</html>
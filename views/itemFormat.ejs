                                    <tr>
            
                                        <td style="width:100%;">
                                            <b>内容</b>
                                        </td>
                                        <td>
                                            <% if (v.checkFin === '0') {%>
                                            <a href="<%= v.questions %>/<%= v.id %>" class="finishedCheck_btn">完了</a>
                                            <% } %>
                                            
                                        </td>

                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <div>

<!DOCTYPE html>
<html>

<%- include('./parts/htmlSetting') %>

<body>
    <%- include('./parts/header') %>


    <div id="main">
        <div id="home">
            <div id="main-menu">

                <div class="folderName">
                    <span style="font-size:32px;">フィルタ</span>
                    <hr>
                    <form action="/search" method="post">
                        <table style="width:100%;font-size: 20px">
                            <tbody>
                                <tr>
                                    <td colspan="3">
                                        <b>
                                            日付：
                                        </b>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="width:50%;">
                                        <input name="beforedate" type="text" class="date-search">から
                                    </td>
                                    <td>
                                        <input name="afterdate" type="text" class="date-search">まで
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>担当者: </b>
                                    </td>
                                    <td>
                                        <select name="stuff">
                                            <option value="">未選択</option>
                                            <option value="高橋">高橋</option>
                                            <option value="本下">本下</option>
                                            <option value="佐藤">佐藤</option>
                                            <option value="石田">石田</option>
                                            <option value="その他">その他</option>
                                        </select>
                                    </td>
                                    <td>
                                        <b>質問者の名前:</b>
                                        <input type="text" name="questioner">
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>質問者の身分:</b>
                                    </td>
                                    <td>
                                        <select name="ident">
                                            <option value="">未選択</option>
                                            <option value="学生">学生</option>
                                            <option value="教職員">教職員</option>
                                        </select>
                                    </td>
                                    <td>
                                        <b>質問者の学籍番号:</b>
                                        <input type="text" name="questionersNumber">

                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>完了済みか否か: </b>
                                    </td>
                                    <td>
                                        <select name="checkFin">
                                            <option value="">未選択</option>
                                            <option value="1">完了</option>
                                            <option value="0">未完了</option>
                                        </select>

                                    </td>
                                    <td>
                                        <b>質問者の基盤ID:</b>
                                        <input type="text" name="questionersID">

                                    </td>
                                </tr>
                            </tbody>
                        </table>


                        <hr>
                        <div style="display: flex;margin: auto;width: max-content;">
                            <p class="formButton">
                                <input id="searchButton" type="button" value="検索">
                            </p>
                            <p class="formButton">
                                <input id="exportCSVButton" type="button" value="CSV出力">
                            </p>

                        </div>

                    </form>
                </div>


                <% title.forEach(function(v,k) { %>
                <% if (v !== 'null') { %>

                <div class="folderName">
                    <span id="title">
                        <a href="/lists">
                            <a href="/lists/<%= v.questions %>">
                                <%= v.questions %>
                            </a>
                        </a>
                    </span>
                    <hr>
                    <p>更新日時：
                        <%= v.date %>
                    </p>
                </div>
                <% }; %>
                <% }); %>
            </div>
            <!-- </div> -->
        </div>
    </div>
</body>

</html>